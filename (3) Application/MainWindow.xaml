<Window x:Class="NexusDev_Dashboard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NexusDev_Dashboard"
        mc:Ignorable="d"
        Title="NexusDev - Dashboard" Height="720" Width="1280" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Left="0" Top="0" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Icon="/logo.png">
    <Window.Background>
        <ImageBrush ImageSource="./backgrounds/darkmodebg.png" />
    </Window.Background>
    <Grid x:Name="MainGrid" Margin="1,0,-1,0">
        <Grid x:Name="LoginGrid" Visibility="Hidden">
            <TextBlock x:Name="EmailAddressTitle" HorizontalAlignment="Center" Margin="0,319,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" Width="248" TextAlignment="Center" Height="28" FontSize="20" Foreground="#FFDD14E4" FontWeight="Bold"/>
            <TextBox x:Name="EmailAddressInput" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="248" Height="29" Margin="0,263,0,0" Background="#FF131213" BorderBrush="#FFDD14E4" Foreground="#FFDD14E4" FontWeight="Bold"/>
            <TextBlock x:Name="PasswordTitle" HorizontalAlignment="Center" Margin="0,233,0,0" TextWrapping="Wrap" Text="Email address" VerticalAlignment="Top" Width="248" TextAlignment="Center" Height="29" FontSize="20" Foreground="#FFDD14E4" FontWeight="Bold"/>
            <PasswordBox x:Name="PasswordInput" HorizontalAlignment="Center" VerticalAlignment="Top" Width="248" Height="29" BorderBrush="#FFDD14E4" Background="#FF131213" Foreground="#FFDD14E4" Margin="0,350,0,0" FontWeight="Bold"/>
            <Button x:Name="LoginButton" Content="Login" HorizontalAlignment="Center" Margin="0,450,0,0" VerticalAlignment="Top" Width="124" Click="LoginButton_Click" BorderBrush="#FFDD14E4" Foreground="White" FontWeight="Bold">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFE100FF" Offset="1"/>
                        <GradientStop Color="#FF5400C2"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <TextBlock HorizontalAlignment="Center" Margin="0,154,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="39" Width="304" Foreground="#FFDD14E4" FontSize="24" TextAlignment="Center" FontWeight="Bold"><Run Language="hu-hu" Text="Login"/></TextBlock>
        </Grid>
        <Grid x:Name="DashboardGrid" Visibility="Visible">
            <ListBox x:Name="OrdersList" Margin="10,41,0,0" Width="326" Height="600" HorizontalAlignment="Left" VerticalAlignment="Top" SelectionChanged="OrdersList_SelectionChanged" BorderBrush="#FFDD14E4" Foreground="White" FontWeight="Bold">
                <ListBox.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFE100FF"/>
                        <GradientStop Color="#FF5400C2" Offset="1"/>
                    </LinearGradientBrush>
                </ListBox.Background>
            </ListBox>
            <TextBox x:Name="SearchBox" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="326" Height="25.94" TextChanged="SearchBox_TextChanged" BorderBrush="#FFDD14E4" SelectionTextBrush="White" FontWeight="Bold">
                <TextBox.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFE100FF"/>
                        <GradientStop Color="#FF5400C2" Offset="1"/>
                    </LinearGradientBrush>
                </TextBox.Background>
            </TextBox>
            <Button x:Name="RefreshButton" Content="Refresh orders" HorizontalAlignment="Left" Margin="10,646,0,0" VerticalAlignment="Top" Width="326" Height="25.28" Click="RefreshButton_Click" BorderBrush="#FFDD14E4" Foreground="White" FontWeight="Bold">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFE100FF"/>
                        <GradientStop Color="#FF5400C2" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <TextBlock x:Name="OrderTitle" HorizontalAlignment="Left" Margin="360,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="36" Width="810" TextAlignment="Center" FontSize="24" Foreground="#FFDD14E4" FontWeight="Bold" RenderTransformOrigin="0.5,0.5">
                <TextBlock.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="0.009"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </TextBlock.RenderTransform>
            </TextBlock>
            <Button x:Name="DeleteOrderButton" Content="Delete" HorizontalAlignment="Left" Margin="1183,17,0,0" VerticalAlignment="Top" Width="87" Height="24" Click="OrderDeleteButton_Click" BorderBrush="#FFDD14E4" Foreground="White" FontWeight="Bold" Visibility="Hidden">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFE100FF"/>
                        <GradientStop Color="#FF5400C2" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <TextBlock x:Name="MessageText" HorizontalAlignment="Left" Margin="360,51,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="910" FontSize="18" Height="256" Foreground="#FFDD14E4" FontWeight="Bold"/>
            <TextBlock x:Name="ColorPaletteText" HorizontalAlignment="Left" Margin="360,345,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="910" FontSize="18" Height="29" Foreground="#FFDD14E4" FontWeight="Bold"/>
            <TextBlock x:Name="ThematicText" HorizontalAlignment="Left" Margin="360,377,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="910" FontSize="18" Height="29" Foreground="#FFDD14E4" FontWeight="Bold"/>
            <TextBlock x:Name="LogoUrlText" HorizontalAlignment="Left" Margin="360,411,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="910" FontSize="18" Height="29" Foreground="#FFDD14E4" FontWeight="Bold"/>
            <GridSplitter HorizontalAlignment="Left" Height="662" Margin="344,0,0,0" VerticalAlignment="Center" Width="5">
                <GridSplitter.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFE100FF"/>
                        <GradientStop Color="#FF5400C2" Offset="1"/>
                    </LinearGradientBrush>
                </GridSplitter.Background>
                <GridSplitter.Foreground>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFE100FF"/>
                        <GradientStop Color="#FF5400C2" Offset="1"/>
                    </LinearGradientBrush>
                </GridSplitter.Foreground>
            </GridSplitter>
        </Grid>
    </Grid>
</Window>
